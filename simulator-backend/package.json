{
  "name": "neighborgrid-simulator",
  "version": "1.0.0",
  "description": "Live tick-based microgrid simulator with SSE streaming",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "sim": "tsx src/simple-server.ts",
    "sim:watch": "tsx watch src/simple-server.ts",
    "start:sim": "npm run sim",
    "build": "tsc",
    "start": "node dist/server.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}

